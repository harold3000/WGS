#Predicting CNV (copy number variant) regions with CNVnator
#https://github.com/abyzovlab/CNVnator

# View bam files
samtools view -h Total-B_L001_R1R2_001.sorted.markdup.bam "chr1:1-10"


# Step1_EXTRACTING READ MAPPING FROM BAM/SAM FILES
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -genome hg38 -tree ~/yonggang/wgs_output/totalb/Total-B_L1L2.sorted.markdup.BQSR.bam

# Step2_GENERATING A READ DEPTH HISTOGRAM
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -his 100 -chrom chr1 chr2 chr3 chr4 chr5 chr6 chr7 chr8 chr9 chr10 chr11 chr12 chr13 chr14 chr15 chr16 chr17 chr18 chr19 chr20 chr21 chr22 chrX chrY -d hg38/

#Step3_CALCULATING STATISTICS
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -stat 100

#Step4_RD SIGNAL PARTITIONING
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -partition 100

#Step5_CNV CALLING
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -call 100 > Total-B.cnvnator.vcf

#Step6_REPORTING READ SUPPORT
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -pe ~/yonggang/wgs_output/totalb/Total-B_L1L2.sorted.markdup.BQSR.bam -qual 20 -over 0.8

#Genotyping genomic regions and visualization
/home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator -root Total-B.root -genotype 100

#Exporting CNV calls as VCFs
perl /home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator2VCF.pl -prefix Total-B -reference GRCh38 Total-B.root /home/yonggang/yonggang/wgs_out/totalb_cnv/
perl /home/yonggang/yonggang/cnvnator/CNVnator-master/cnvnator2VCF.pl Total-B.root > Total-B.vcf

# Open ROOT file
root your_file.root
TBrowser b
#exit
.q

# Change default Java version on linux (Java 11 for IGV)
sudo update-alternatives --config java
# Open IGV_Linux_2.5.0
java --module-path=lib -Xmx4g @igv.args --module=org.igv/org.broad.igv.ui.Main
